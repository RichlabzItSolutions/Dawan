<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_22sdp"
                android:drawableStart="@drawable/baseline_arrow_back_24"
                android:drawablePadding="@dimen/_12sdp"
                android:drawableTint="#000000"
                android:fontFamily="@font/robotoslab_semibold"
                android:gravity="center"
                android:text="Latest News"
                android:textColor="#000000"
                android:textSize="@dimen/_15ssp" />

            <RelativeLayout
                android:id="@+id/rl_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_5sdp"
                android:layout_below="@id/textView">
                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_marginEnd="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:visibility="visible"/>

                <VideoView
                    android:id="@+id/vv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_marginEnd="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:visibility="gone"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_9sdp"
                android:textColor="#805A5A59"
                android:fontFamily="@font/encodesans_medium"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@id/tv_save"
                android:layout_alignBottom="@id/tv_save"
                android:gravity="center"
                android:layout_below="@id/rl_img"
                android:text="WARAR" />
            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_img"
                android:fontFamily="@font/lato_medium"
                android:textColor="#805A5A59"
                android:layout_marginEnd="@dimen/_14sdp"
                android:gravity="center"
                android:textSize="@dimen/_10ssp"
                android:layout_alignParentEnd="true"
                android:drawableEnd="@drawable/icon_ionic_md_share"
                android:drawablePadding="@dimen/_5sdp"/>
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:textColor="#805A5A59"
                android:fontFamily="@font/encodesans_medium"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_alignParentStart="true"
                android:layout_below="@id/tv_cat"
                android:text="" />
            <TextView
                android:id="@+id/tv_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_share"
                android:layout_alignTop="@id/tv_share"
                android:layout_alignBottom="@id/tv_share"
                android:textSize="@dimen/_10sdp"
                android:textColor="#805A5A59"
                android:fontFamily="@font/encodesans_medium"
                android:layout_marginEnd="@dimen/_14sdp"

                android:layout_below="@id/rl_img"
                android:gravity="center"
                android:drawablePadding="@dimen/_3sdp"
                android:text=""
                app:drawableRightCompat="@drawable/baseline_bookmark_border_24"
                app:drawableTint="#7B7B7A" />

            <!--<TextView
                android:id="@+id/tv_paid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_medium"
                android:visibility="gone"
                android:textColor="#AD1916"
                android:textStyle="bold"
                android:layout_below="@id/tv_date"
                android:textSize="@dimen/_12ssp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@id/tv_payNow"
                android:layout_alignBottom="@id/tv_payNow"
                android:drawablePadding="@dimen/_5sdp"/>


            <TextView
                android:id="@+id/tv_payNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:fontFamily="@font/lato_medium"
                android:textStyle="bold"
                android:background="@drawable/custom_tab_indicator"
                android:visibility="gone"
                android:textColor="@color/white"
                android:layout_below="@id/tv_save"
                android:textSize="@dimen/_10ssp"
                android:text="Pay Now"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_14sdp"
                android:drawablePadding="@dimen/_5sdp"/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/payId"
                android:layout_below="@id/v1"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_14sdp">

                <TextView
                    android:id="@+id/tv_paid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_medium"
                    android:visibility="visible"
                    android:textColor="#AD1916"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginEnd="@dimen/_12sdp"

                   />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/black"
                    android:textStyle="bold"
                     />

                <TextView
                    android:id="@+id/tv_payNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_8sdp"
                    android:paddingRight="@dimen/_8sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:fontFamily="@font/lato_medium"
                    android:textStyle="bold"
                    android:background="@drawable/custom_tab_indicator"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10ssp"
                    android:text="Pay Now"
                    android:layout_gravity="right"

                    />


            </LinearLayout>

           <!-- <TextView
                android:id="@+id/btnText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_date"
                android:padding="@dimen/_5sdp"
                android:text="Reading automatically posts "
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/white"
                android:background="@color/black"
                android:fontFamily="@font/robotoslab_semibold"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_9sdp"/>-->


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_save"
                android:text=""
                android:textSize="@dimen/_14ssp"
                android:textColor="#000000"
                android:fontFamily="@font/robotoslab_semibold"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_9sdp"/>
            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title"
                android:visibility="gone"
                android:text="New York (Dawan)- Dowladda Soomaaliya ayaa heshiis dhanka taageerada saadka qeyb ka mid ah Ciidamada Amniga Soomaaliya la gashay xafiiska Qarmada Midoobay u qaabilsan..."
                android:textSize="@dimen/_9ssp"
                android:textColor="#805A5A59"
                android:fontFamily="@font/lato_regular"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_9sdp"
                android:paddingBottom="@dimen/_7sdp"/>
            <WebView
                android:id="@+id/wv"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_9sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title"/>
            <View
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@id/wv"
                android:background="#18707070"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_14sdp"/>
            <TextView
                android:id="@+id/txt_previous_articles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/v1"
                android:text="Previous Articles"
                android:textSize="@dimen/_14ssp"
                android:textColor="#000000"
                android:fontFamily="@font/robotoslab_semibold"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_14sdp"
                android:layout_marginTop="40dp"/>
            <com.dawan.utils.CustomRecyclerView
                android:id="@+id/rv_subnews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@id/txt_previous_articles"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:fabSize="mini"
                android:backgroundTint="#70AD1916"
                android:layout_margin="@dimen/_11sdp"
                android:layout_alignParentRight="true"
                android:layout_alignEnd="@id/tv_title"
                android:layout_alignTop="@id/tv_title"
                android:visibility="gone"
                android:src="@drawable/baseline_comment_24" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
