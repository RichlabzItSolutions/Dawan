<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/rl_faq"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_14sdp"
    android:layout_marginEnd="@dimen/_14sdp"
    android:paddingTop="@dimen/_5sdp"
    android:paddingBottom="@dimen/_5sdp"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TableRow
        android:id="@+id/tr_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_weight="1"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/robotoslab_medium"
            android:textColor="#000000"
            android:text="Lorem Ipsum is simply dummy text" />

        <ImageView
            android:id="@+id/iv_expand"
            android:layout_width="@dimen/_17sdp"
            android:layout_height="@dimen/_17sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/_4sdp"
            android:rotation="180"
            android:tag="false"
            android:src="@drawable/arrow_up" />
    </TableRow>
    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#10707070"
        android:layout_below="@id/tr_title"/>
    <TextView
        android:id="@+id/tv_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_14sdp"
        android:layout_below="@id/v1"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the indus try's standard dummy text ever since the 1500s,"
        android:fontFamily="@font/lato_regular"
        android:textColor="#848484"
        android:textSize="@dimen/_10ssp"
        android:visibility="gone"
        android:lineSpacingExtra="@dimen/_5sdp"/>


</RelativeLayout>
