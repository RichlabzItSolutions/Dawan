<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_img"
        android:layout_width="@dimen/_58sdp"
        android:layout_height="@dimen/_49sdp"
        android:layout_centerVertical="true"
        app:cardCornerRadius="@dimen/_7sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_16sdp">
        <ImageView
            android:id="@+id/iv_noti"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sample4"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"

        android:layout_toRightOf="@id/cv_img"
        android:layout_marginEnd="@dimen/_12sdp"
        android:textColor="#000000"
        android:textSize="@dimen/_11ssp"
        android:fontFamily="@font/robotoslab_medium"
        android:text="Wada xaajoodkii biya-xireenka Itoobiya oo fashil ku dhamaaday"/>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_toRightOf="@id/cv_img"
        android:ellipsize="end"
        android:fontFamily="@font/robotoslab_medium"
        android:maxLines="2"
        android:text="Wada xaajoodkii biya-xireenka Itoobiya oo fashil ku dhamaaday"
        android:textSize="@dimen/_10ssp" />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cv_img"
        android:layout_marginEnd="@dimen/_12sdp"
        android:textColor="#805A5A59"
        android:textSize="@dimen/_11ssp"
        android:layout_below="@id/tv_desc"
        android:fontFamily="@font/robotoslab_medium"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:text="6h ago"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#18707070"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_below="@id/tv_time"/>



</RelativeLayout>