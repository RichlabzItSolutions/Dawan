<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotoslab_semibold"
        android:textColor="#000000"
        android:drawableStart="@drawable/baseline_arrow_back_24"
        android:drawableTint="#000000"
        android:gravity="center"
        android:drawablePadding="@dimen/_12sdp"
        android:textSize="@dimen/_15ssp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_22sdp"
        android:text="Latest Videos" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_vv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_158sdp"
        android:layout_below="@id/textView"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_14sdp"
        android:layout_marginBottom="@dimen/_14sdp"
        app:cardCornerRadius="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_14sdp">
    <VideoView
        android:id="@+id/videoView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_158sdp" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        android:fontFamily="@font/lato_medium"
        android:textColor="#805A5A59"
        android:layout_below="@id/cv_vv"
        android:layout_marginStart="@dimen/_21sdp"
        android:textSize="@dimen/_10ssp"
        android:drawableEnd="@drawable/icon_ionic_md_share"
        android:drawablePadding="@dimen/_5sdp"/>
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="December 13,2020"
        android:fontFamily="@font/lato_medium"
        android:textColor="#805A5A59"
        android:layout_below="@id/cv_vv"
        android:textSize="@dimen/_10ssp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_alignParentRight="true"
        android:drawablePadding="@dimen/_5sdp"/>
    <TextView
        android:id="@+id/headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sawiro: Shirka amniga Soomaaliya oo ka furmay New York"
        android:fontFamily="@font/robotoslab_semibold"
        android:textColor="#000000"
        android:layout_below="@id/tv_share"
        android:textSize="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_21sdp"
        android:drawablePadding="@dimen/_5sdp"/>
    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New York (Dawan)- Madaxweynaha Jamhuuriyadda Federaalka Soomaaliya Mudane Xasan Sheekh Maxamuud ayaa shir godoomi yay Shirka Amniga Soomaaliya oo ka furmay Xarunta...."
        android:fontFamily="@font/lato_medium"
        android:textColor="#805A5A59"
        android:layout_below="@id/headline"
        android:textSize="@dimen/_9sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_21sdp"
        android:maxLines="3"
        android:drawablePadding="@dimen/_5sdp"/>
    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_21sdp"
        android:layout_below="@id/desc"
        android:background="#18707070"/>
    <TextView
        android:id="@+id/tv_recent_videos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recent Videos"
        android:fontFamily="@font/robotoslab_semibold"
        android:textColor="#000000"
        android:layout_below="@id/v1"
        android:textSize="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_21sdp"
        android:drawablePadding="@dimen/_5sdp"/>
    <com.dawan.utils.CustomRecyclerView
        android:id="@+id/rv_recent_videos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_recent_videos"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginStart="@dimen/_21sdp"/>



</RelativeLayout>