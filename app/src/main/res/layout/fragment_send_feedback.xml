<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android">


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_22sdp"
                    android:drawableStart="@drawable/baseline_arrow_back_24"
                    android:drawablePadding="@dimen/_12sdp"
                    android:drawableTint="#000000"
                    android:fontFamily="@font/robotoslab_semibold"
                    android:gravity="center"
                    android:text="SendFeedback"
                    android:textColor="#000000"
                    android:textSize="@dimen/_15ssp" />

                <Spinner
                    android:id="@+id/sp_query"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:background="@null"
                    android:layout_marginTop="@dimen/_27sdp"/>
                <EditText
                    android:id="@+id/et_message"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_86sdp"
                    android:layout_below="@id/sp_query"
                    android:background="@drawable/bg_edittext_round_corner"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:fontFamily="@font/lato_regular"
                    android:hint="Enter your message"
                    android:textSize="@dimen/_11ssp"
                    android:gravity="start|top"
                    android:padding="@dimen/_12sdp"/>
    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext_round_corner"
        android:text="Submit"
        android:layout_below="@id/et_message"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:drawablePadding="@dimen/_8sdp"
        android:gravity="center"
        android:fontFamily="@font/encodesans_semibold"
        android:textColor="#ffffff"
        android:backgroundTint="#AC1916"
        android:textSize="@dimen/_12ssp"
        android:layout_marginTop="@dimen/_24sdp"/>



</RelativeLayout>