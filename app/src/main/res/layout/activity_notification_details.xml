<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationDetailsActivity">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_22sdp"
        android:drawableStart="@drawable/baseline_arrow_back_24"
        android:drawablePadding="@dimen/_12sdp"
        android:drawableTint="#000000"
        android:fontFamily="@font/robotoslab_semibold"
        android:gravity="center"
        android:text="Notification Detail"
        android:textColor="#000000"
        android:textSize="@dimen/_15ssp" />
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/encodesans_medium"
        android:text=""
        android:textColor="#805A5A59"
        android:layout_below="@id/textView"
        android:textSize="@dimen/_10sdp" />

    <TextView
        android:id="@+id/tv_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv1"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_9sdp"
        android:layout_marginEnd="@dimen/_14sdp"
        android:fontFamily="@font/robotoslab_semibold"
        android:text=""
        android:textColor="#000000"
        android:textSize="@dimen/_14ssp" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_heading"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_9sdp"
        android:layout_marginEnd="@dimen/_14sdp"
        android:ellipsize="end"
        android:fontFamily="@font/lato_regular"
        android:maxLines="3"
        android:paddingBottom="@dimen/_7sdp"
        android:text=""
        android:textColor="#805A5A59"
        android:textSize="@dimen/_9ssp" />

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_158sdp"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_14sdp"
        android:layout_below="@id/tv_date"/>
</RelativeLayout>